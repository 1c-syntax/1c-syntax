{
	"version": "0.1.0",
	"windows": {
		"command": "oscript.exe"
	},
	"linux": {
		"command": "/opt/bin/oscript"
	},
	"isShellCommand": true,
	"showOutput": "silent",
	"args": [
		"-encoding=utf-8"
	],
	"tasks": [
		{
			"taskName": "Compile bsl(1С)",
			"args": [
				"-compile",
				"${file}"
			],
			"echoCommand": true,
			"showOutput": "always",
			"suppressTaskName": true,
			"isBuildCommand": false
		},
		{
			"taskName": "Run bsl(1С)",
			"args": [
				"${file}"
			],
			"echoCommand": true,
			"showOutput": "always",
			"suppressTaskName": true,
			"isBuildCommand": true,
			"problemMatcher": {
				"fileLocation": "absolute",
				"pattern": {
 			"regexp": "^{Модуль\\s+(.*)\\s\\/\\s.*:\\s+(\\d+)\\s+\\/\\s+(.*)}$",
					"file": 1,
					//"line": 2,
					"location": 2,
					"message": 3
				}
			}
		}
	]
}